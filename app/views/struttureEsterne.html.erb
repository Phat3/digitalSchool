<script>

    $(document).ready(function() {


        var owl = $(".image-carousel");
        var status = $("#owlStatus");

        owl.owlCarousel({
            items: 1,
            stopOnHover: true,
            navigation: true,
            navigationText : false,
            responsiveBaseWidth: ".image-carousel-slide",
            beforeMove : before,
            afterMove : after
            //responsiveBaseWidth: ".author"
        });

        $(".next").click(function(){
            owl.trigger('owl.next');
        })
        $(".prev").click(function(){
            owl.trigger('owl.prev');
        })

        function before(){
           $('.info-struttura').fadeOut();
        }


        function after(){
            var item = this.owl.owlItems[this.owl.currentItem];

            //mettiamo un delay di 500 ms per evitare bug grafici
            setTimeout(function() {
                    $('.info-struttura h4').html($(item).find('.titolo').text());
                    $('.info-struttura p').html($(item).find('.testo').text());
                    $('.info-struttura').fadeIn();
            }, 500);

        }
    });

$(window).load(function(){
    $('.customNavigation').tooltip('show');

    //rendiamolo visibile finche l utente non ci passa sopra
     $('.customNavigation').hover(function() {
                   $('.customNavigation').tooltip('destroy');
            });
})
</script>
