<div class="row intestazione">
    <h3>MODIFICA PIANO</h3>
</div>

<%= form_for :productimages, url: "/admin/aggiornaPiano/" + @piano.id.to_s, :html => {:multipart => true} do |f| %>

  <div class="form-group">
    <label >Nome Piano</label>
    <input type="text" name="nome" class="form-control"  placeholder="Immetti il nome del piano formativo" value="<%= @piano.nome %>">
  </div>
  <div class="form-group">
    <label >Informazioni</label>
    <textarea id="body" class='textarea-admin' name='descrizione'><%= @piano.descrizione %></textarea>
  </div>

  <label >Immagine Ore Materie</label>
    <p>
          <%= file_field(:immagine, :image,  :multiple => true, accept: 'image/png,image/gif,image/jpeg') %></p>
    <p>

    <p>
      <%= f.submit  'Salva', :class => 'btn btn-primary pull-right' %>
    </p>
<% end %>

<script type="text/javascript">
tinymce.init({
    selector: "textarea",
    forced_root_block : 'div'
 });
</script>
