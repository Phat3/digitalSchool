<div class="row intestazione">
    <h3>MODIFICA Evento</h3>
</div>

<%= form_for :productimages, url: "/admin/aggiornaEvento/" + @evento.id.to_s, :html => {:multipart => true} do |f| %>

  <div class="form-group">
    <label >Titolo</label>
    <input type="text" name="nome" class="form-control"  placeholder="Immetti il titolo dell'evento" value="<%= @evento.nome %>">
  </div>
  <div class="form-group">
    <label >Data (dd/mm/yyyy)</label>
    <input type="text" name="data" class="form-control"  placeholder="Immetti la data d'inizio ed eventualmente quella di fine" value="<%= @evento.data %>">
  </div>
  <div class="form-group">
    <label >Descrizione</label>
    <textarea id="body" class='textarea-admin' name='descrizione'><%= @evento.descrizione %></textarea>
  </div>
    <p>
      <%= f.submit  'Salva', :class => 'btn btn-primary pull-right' %>
    </p>
<% end %>

<script type="text/javascript">
tinymce.init({
    selector: "textarea",
    forced_root_block : 'div'
 });
</script>

