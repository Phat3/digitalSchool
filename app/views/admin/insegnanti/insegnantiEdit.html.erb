<div class="row intestazione">
    <h3>AGGIUNGI INSEGANTE</h3>
</div>

<%= form_for :productimages, url: "/admin/aggiornaInsegnante/" + @insegnante.id.to_s, :html => {:multipart => true} do |f| %>

  <div class="form-group">
    <label >Nome e Cognome</label>
    <input type="text" name="nome" class="form-control"  placeholder="Immetti il nome del piano formativo" value="<%= @insegnante.nome %>">
  </div>
  <div class="form-group">
    <label >Descrizione</label>
    <textarea id="body" class='textarea-admin' name='descrizione'><%= @insegnante.bio %></textarea>
  </div>

  <label >Foto</label>
    <p>
          <%= file_field(:immagine, :image,  :multiple => true, accept: 'image/png,image/gif,image/jpeg') %></p>
    <p>

    <label >Pdf</label>
      <p>
          <%= file_field(:pdfs, :pdf,  :multiple => true, accept: 'application/pdf') %></p>
    <p>
    <p>
      <%= f.submit  'Salva', :class => 'btn btn-primary pull-right' %>
    </p>
<% end %>

<script type="text/javascript">
tinymce.init({
    selector: "textarea",
    forced_root_block : 'div'
 });
</script>

